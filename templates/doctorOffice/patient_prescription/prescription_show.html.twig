{% extends 'doctorOffice/index.html.twig' %}
{% block title %}{{ template.items.show.content.title }}{% endblock %}
{% block content %}
    <div>
        <h2>{{ template.items.show.content.h2 }}</h2>
        {{ include('flashmessages.html.twig') }}
    </div>
    <div class="buttons">
        <button class="button main-button"
                onclick="location.href='{{ path(
                    'adding_survey_by_doctor',
                    {
                        'patient': patient.id,
                        'prescription': prescription.id
                    }
                ) }}';">
            Добавление обследования
        </button>
        <button class="button main-button"
                onclick="location.href='{{ path(
                    'prescription_patient_medicine_new',
                    {
                        'patient': patient.id,
                        'prescription' : prescription.id
                    }
                ) }}';">
            Добавление лекарства
        </button>
        {% if isAppointmentNotExists(prescription) %}
            <button class="button main-button"
                    onclick="location.href='{{ path(
                        'adding_reception_by_doctor',
                        {
                            'patient': patient.id,
                            'prescription' : prescription.id
                        }
                    ) }}';">
                Добавление приема
            </button>
        {% endif %}
    </div>
    <div>
    </div>

    <div id="prescriptionInfo">
        <div id="prescriptionDate">
            <div>{{ template.items.show.content.createdTime }}</div>
            {{ prescription.createdTime ? prescription.createdTime|date('Y-m-d') : '' }}
        </div>
        <div id="prescriptionStaff">
            <div>{{ template.items.show.content.doctor }}</div>
            {{ fio(prescription.staff.AuthUser) }}
        </div>
    </div>
    <div id="prescriptionTestingList">
        <div class="table-wrapper table-pacients">
            <div class="box-body table-responsive">
                <div
                        id="datatable" class="dataTables_wrapper form-inline dt-bootstrap"
                        data-table_settings='{{ datatable_settings(patientTestingTable) }}'
                >
                <span class="label label-info">
                    <i class="fa fa-sync-alt fa-spin fa-1x fa-fw"></i>
                    {{ template.items.show.content.loadTableData }}
                </span>
                </div>
            </div>
        </div>
    </div>
{% endblock %}