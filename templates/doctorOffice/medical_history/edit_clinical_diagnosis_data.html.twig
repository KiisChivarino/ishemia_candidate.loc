{% extends 'doctorOffice/index.html.twig' %}
{% block title %}{{ template.items.edit.content.title }}{% endblock %}
{% block content %}
    <div class="content-wrapper__top">
        <ul>
            <li><h1>{{ template.items.edit.content.h1 }}</h1></li>
            <li>
                <a class="back-page" href="{{ path(
                    'doctor_medical_history',
                    {'id': entity.id}
                ) }}">История болезни</a>
            </li>
        </ul>
    </div>
    <div class="adm-users-edit">
        {{ form_start(form) }}
        {% for child in form.medicalHistory %}
            <ul>
                <li {% if 'checkbox' in child.vars.block_prefixes %}class="checks" {% endif %}>
                    <span class="label">{{ form_label(child) }}</span>
                    {% if child.vars.name == 'lifeHistory' %}
                        <a href="{{ path(
                            'doctor_edit_initial_examination_data_anamnesis_of_life_using_constructor',
                            { 'id': entity.id}
                        ) }}"
                           class="form-control"
                        >
                            Собрать Анамнез жизни
                        </a>
                        <a href="{{ path(
                            'doctor_edit_initial_examination_data_anamnesis_of_life_by_template',
                            { 'id': entity.id}
                        ) }}"
                           class="form-control"
                        >
                            Выбрать из шаблона Анамнез жизни
                        </a>
                    {% endif %}
                    {{ form_widget(child) }}
                </li>
            </ul>
        {% endfor %}
        {% for child in form.patientClinicalDiagnosisText %}
            <ul>
                <li>
                    {{ form_label(child) }}
                    {{ form_widget(child) }}
                </li>
            </ul>
        {% endfor %}
        {% for child in form.patientMKBCode %}
            <ul>
                <li>
                    {{ form_label(child) }}
                    {{ form_widget(child) }}
                </li>
            </ul>
        {% endfor %}
        <div class="buttons">
            <button class="button main-button">
                {{ button_label|default(template.items.form.content.formButtonLabel) }}
            </button>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}