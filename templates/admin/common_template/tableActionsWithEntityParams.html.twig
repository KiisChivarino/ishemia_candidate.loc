{% if template.items.tableActions.isEnabled %}
    <div class="table-wrapper__operation-icons">
        {% if template.items.show.isEnabled %}
            <span><a
                        href="{{ path(
                            template.items.show.templateItemRoute.routeName,
                            template.items.show.templateItemRoute.routeParams
                        ) }}"
                ><img src="{{ asset('build/images/operation-icon-1.svg') }}" alt=""/></a></span>
        {% endif %}
        {% if template.items.edit.isEnabled %}
            <span><a
                        href="{{ path(
                            template.items.edit.templateItemRoute.routeName,
                            template.items.edit.templateItemRoute.routeParams
                        ) }}"
                ><img src="{{ asset('build/images/operation-icon-2.svg') }}" alt=""/></a></span>
        {% endif %}
        {% if template.items.delete.isEnabled %}
            <form
                    method="post"
                    action="{{ path(
                        template.items.delete.templateItemRoute.routeName,
                        template.items.delete.templateItemRoute.routeParams
                    ) }}"
                    style="display: inline;"
                    onsubmit="return confirm('{{ template.items.tableActions.content.deleteConfirm }}');">
                <input type="hidden" name="_method" value="DELETE">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ deleteId) }}" />
                <button
                        type="submit"
                        class="btn btn-danger btn-flat"
                        style="border: none; outline: none; background-color: inherit; margin: 0; padding: 0;"
                ><img src="{{ asset('build/images/operation-icon-3.svg') }}" alt="" /></button>
            </form>
        {% endif %}
    </div>
{% endif %}