{% extends template.commonTemplatePath~'show.html.twig' %}
{% block show_content %}
    <li>
        <span class="title">{{ template.items.show.content.prescription }}</span>
        <p>
            {% if entity.prescription %}
                <a href="{{ path('prescription_show', {'prescription': entity.prescription.id}) }}">
                    {{ prescriptionTitle }}
                </a>
            {% endif %}
        </p>
    </li>
    <li>
        <span class="title">{{ template.items.show.content.patientAppointment }}</span>
        <p>
            {% if entity.patientAppointment %}
                <a href="{{ path('patient_appointment_show', {'patientAppointment': entity.patientAppointment.id}) }}">
                    {{ patientAppointmentInfo }}
                </a>
            {% endif %}
        </p>
    </li>
    <li>
        <span class="title">{{ template.items.show.content.staff }}</span>
        <p>
            {% if entity.staff %}
                <a href="{{ path('staff_show', {'id': entity.staff.id}) }}">{{ staff }}</a>
            {% endif %}
        </p>
    </li>
    <li>
        <span class="title">{{ template.items.show.content.inclusionTime }}</span>
        <p>{{ entity.inclusionTime ? entity.inclusionTime|date('d.m.Y H:i') : '' }}</p>
    </li>
    <li>
        <span class="title">{{ template.items.show.content.plannedDateTime }}</span>
        <p>{{ entity.plannedDateTime ? entity.plannedDateTime|date('d.m.Y H:i') : '' }}</p>
    </li>
{% endblock %}